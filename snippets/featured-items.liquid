<div class="ww-featured-items-sect">
  <div class="container category-page-section">
    {% if section.settings.title != blank %}
  	<h1 class="heading">
    	{{ section.settings.title }}
  	</h1>
  	{% endif %}
    
    {% for block in section.blocks %}
    <div class="ww-fis-item">
      <div>
        {% if block.settings.title != blank %}
        <h1 class="heading">
          {{ block.settings.title }}
        </h1>
        {% endif %}
        
        <div class="ww-fis-item-copy">
          {{ block.settings.copy }}

          {% if block.settings.link_text != blank %}
          <a href="{{ block.settings.link_Url}}" class="button button--primary">
            {{ block.settings.link_text }}
          </a>
          {% endif %}
        </div>
      </div>
      <div>
      	<img src="{{ block.settings.featured_image | img_url: 'master' }}" alt=""/>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

{% style %}
.featured-items-section {
	max-width: 100%;
	background: #fff;
	padding: 90px 0px 5px;
}
.ww-featured-items-sect {
}
	.ww-featured-items-sect .ww-fis-item {
		display: flex;
	}
	.ww-featured-items-sect .ww-fis-item:nth-child(even) {
		flex-direction: row-reverse;
	}
      .ww-featured-items-sect .ww-fis-item > div {width: 50%;}
		.ww-featured-items-sect .ww-fis-item { 
			width: 100%; 
			column-gap: 40px;
			margin: 0 auto 100px;
		}
	.ww-featured-items-sect .ww-fis-item h1 {
		font-size: 55px;
		font-family: 'VolteB';
		line-height: 1.1;
		color: #002D72;
		margin-bottom: 15px;
	}
	.ww-featured-items-sect .ww-fis-item-copy { max-width: 740px; }
      .ww-featured-items-sect .ww-fis-item-copy p {
          font-size: 22px;
          line-height: 1.2;
          color: #002D72;
      }
	  .ww-featured-items-sect .ww-fis-item-copy .button { margin-top: 30px; }
	  .ww-featured-items-sect img {
		width: 100%;
	  }
@media (max-width: 1100px) {
	.ww-featured-items-sect .ww-fis-item {
		flex-direction: column-reverse !important;
		margin-bottom: 50px;
	}
      .ww-featured-items-sect .ww-fis-item > div,
	  .ww-featured-items-sect .ww-fis-item-copy,
	  .ww-featured-items-sect .ww-fis-item-copy .button {
      	width: 100%;
		max-width: 100%;
      }
	.ww-featured-items-sect .ww-fis-item h1 {
		margin: 25px auto 15px;
		font-size: 42px;
	}
}

@media (min-width: 768px) and (max-width: 1000px) {

}
{% endstyle %}