{% if section.blocks.size > 0 %}
<div class="container category-page-section faq-section">
  {% if section.settings.faq_title != blank %}
  <h1 class="heading heading-top-faq">
    {{ section.settings.faq_title }}
  </h1>
  {% endif %}
  
  <div class="faq-module">
    <div class="faq-items">
      {% assign loadMore = false %}
      {% for block in section.blocks %}
      
      {% if forloop.index > 4 %}
      	{% assign wrapperClass = "load-more-hidden" %}
      {% endif %}
      
      <div class="faq-item {{ wrapperClass }}">
        <div class="faq-item__header">
          <h2 class="heading">
          {{ block.settings.question }}
          </h2>
        </div>
        <div class="faq-item__body">
          {{ block.settings.answer }}
        </div>
      </div>
      {% if forloop.index > 4 and loadMore == false %}
      	{% assign loadMore = true %}
      	<a href="#" class="load-more-faq heading">
          Load more
      </a>
      {% endif %}
      {% endfor %}
    </div>
    <div>
      {% if section.settings.faq_image != blank %}
      <img src="{{section.settings.faq_image | img_url:'master'}}" class="faq-featured-img" alt="" />
      {% endif %}
      
      <h1 class="heading heading-featured-faq">
        {{ section.settings.faq_title }}
      </h1>
    </div>
  </div>
</div>
{% endif %}
