<div class="container category-page-section">
  <h1 class="heading">
    {{ section.settings.title }}
  </h1>
</div>

<div class="offers-category-wi-icons container">
  <div class="inner">
    {% for block in section.blocks %}
    <div>
      {% if block.settings.icon != blank %}
      <div class="img-icon-container">
      	<img src="{{ block.settings.icon | img_url: 'master' }}" class="img-icon" alt="{{ block.settings.title }}" />
      </div>
      {% endif %}
	  
      {% if  block.settings.title != blank %}
      <h2 class="heading">
        {{ block.settings.title }}
      </h2>
      {% endif %}
      
      {{ block.settings.copy }}
      {% if block.settings.link_text != blank %}
      <a href="{{ block.settings.link_url }}" class="button button--primary offers-category-wi-icons-cta">
        {{ block.settings.link_text }}
      </a>
      {% endif %}
    </div>
    {% endfor %}
  </div>
</div>

{% style %}
.offers-wic-container {
	margin: 100px auto 80px;
}
.category-page-section > p {
	font-size: 22px;
	line-height: 1.2;
	color: #002D72;
}
.offers-wic-container .offers-category-wi-icons .inner {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 0fr);
    grid-column-gap: 0px;
    grid-row-gap: 0px;
    margin: 30px auto 50px;
}
	.offers-category-wi-icons .inner > div {
		position: relative;
		width: 100%;
		padding: 45px 5.1% 60px;
		text-align: center;
		background: #fff;
		border: 1px solid #D8D8D8;
	}
        .offers-wic-container .offers-category-wi-icons .inner > div:nth-child(1) { 
            grid-area: 1 / 1 / 2 / 3; 
            border-bottom: 1px solid #D8D8D8;
            margin-bottom: 20px;
        }
        .offers-wic-container .offers-category-wi-icons .inner > div:nth-child(2) { 
            grid-area: 2 / 1 / 3 / 2;
            max-width: calc(100% - 10px);
            margin-right: 10px;
        }
        .offers-wic-container .offers-category-wi-icons .inner > div:nth-child(3) { 
            grid-area: 2 / 2 / 3 / 3; 
			max-width: calc(100% - 10px);
			margin-left: 10px;
        }

.offers-category-wi-icons .inner h2 {
	font-size: 30px;
	line-height: 1;
	margin-bottom: 14px;
}
.offers-category-wi-icons .inner strong {
	font-family: 'VolteB';
	font-weight: normal;
	margin: 0px auto 10px;
	display: block;
}
.offers-category-wi-icons .inner p {
	font-size: 22px;
	line-height: 1.2;
	color: #002D72;
	max-width: 1200px;
	margin: 0px auto 20px;
}
.offers-category-wi-icons .inner .img-icon-container ~ p {
	font-size: 22px;
	margin-top: 20px;
	margin-bottom: 35px;
}
.offers-category-wi-icons .img-icon-container {
	margin-bottom: 25px;
	height: 64px;
}
.offers-category-wi-icons-cta {
    margin: 40px auto 0px;
    display: block;
}
.offers-category-wi-icons .item-cta {
	position: absolute;
	bottom: 55px;
    left: 50%;
    transform: translateX(-50%);
	font-family: 'VolteB';
	font-size: 20px;
	line-height: 1px;
	color: #307FE2;
	white-space: nowrap;
}

	.offers-category-wi-icons .item-cta:after {
        content: ' ';
        position: absolute;
        right: -26px;
        top: 50%;
        transform: translateY(-50%);
        background: url('https://wellwise.s3.amazonaws.com/fa-arrow-right-lb.png') center center no-repeat;
        background-size: contain;
        width: 11px;
        height: 11px;
	}
@media(max-width: 768px) {
	.offers-wic-container .offers-category-wi-icons .inner > div:nth-child(3) {
		margin: 20px auto;
	}
}
@media(max-width: 1024px) {
	.offers-category-wi-icons .inner {
		flex-direction: column
	}
	.offers-category-wi-icons .inner > div {
		margin: 0px auto;
	}
}
@media(min-width: 1024px) and (max-width: 1200px) {
	.offers-category-wi-icons .inner > div {
		border-bottom: 1px solid #D8D8D8;
	}
	.offers-category-wi-icons .inner {
		flex-direction: column;
	}
}
{% endstyle %}