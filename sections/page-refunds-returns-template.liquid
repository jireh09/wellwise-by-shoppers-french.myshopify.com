{% stylesheet %}
.refunds-services-wrapper h1,
.refunds-services-wrapper h2,
.refunds-services-wrapper h3,
.refunds-services-wrapper h4,
.refunds-services-wrapper p {
	color: #002D72;
}
.refunds-services-wrapper p {
  font-size: 20px;
  line-height: 1.2;
}
.refunds-services-wrapper .button.button--primary {
	font-size: 20px;
  max-width: 380px;
  width: 100%;
}

.returns-grid-3 {
    display: flex;
    background: #fff;
    margin: 100px 0 85px;
}
.returns-grid-3 > div {
    width: 100%;
    border: 1px solid #D8D8D8;
    text-align: center;
    padding: 45px 10px 60px;
}
.returns-grid-3 > div img {
    display: block;
    margin: 0px auto 25px;
}
.returns-grid-3 h2 {
	font-size: 30px;
	line-height: 1.1;
}
.returns-grid-3 p {
	max-width: 520px;
  text-align: center;
  margin: 0px auto;
}
.temp-delay {
    background: #FEDD00;
    padding: 30px 30px !important;
    margin-bottom: 60px;
}
.temp-delay h3 {
	font-size: 24px;
	margin: 0px;
}

.container.init-returns {
	background: #fff;
	border: 1px solid #D8D8D8;
	padding-top: 50px;
	padding-bottom: 50px;
}
.init-returns h2 {
	font-size: 42px;
	line-height: 1.1;
	margin-bottom: 10px;
}
.init-returns .flex-ways {
	display: flex;
}
.init-returns .flex-ways > div {
	width: 100%;
}
.init-returns h3 {
	font-size: 30px;
	line-height: 1.1;
	margin: 32px 0 20px;
}
.init-returns h4 {
	font-size: 24px;
	line-height: 1.1;
	margin-bottom: 18px;
}
.init-returns li {
	color: #002D72;
  font-size: 20px;
  line-height: 1.2;
	padding-bottom: 8px;
}
.init-returns .any-issues-lbl {
	text-align: center;
	margin: 45px auto 30px;
}
.init-returns .any-issues-lbl a {
	text-decoration: underline;
}
.init-returns .button--primary {
	display: block;
	margin: 0px auto;
}

.multi-box {
	margin: 90px auto;
}

.multi-box h2 {
	font-size: 42px;
	line-height: 1.1;
	margin-bottom: 15px;
}
.multi-box p {
	font-size: 22px;
	line-height: 1.2;
}

.return-elg-sect {
	background: #fff;
	padding: 80px 0 50px;
}
.flex-elg-sect {
	display: flex;
}
.flex-elg-sect > div {
	width: 100%;
}
.flex-elg-sect h2 {
  font-size: 42px;
  line-height: 1.1;
	margin-bottom: 18px;
}
.flex-elg-sect p {
  font-size: 22px;
  line-height: 1.2;
	margin-bottom: 18px;
}
.flex-elg-sect table {
  max-width: 700px;
	width: 100%;
	text-align: left;
}
.flex-elg-sect table thead th, 
.flex-elg-sect table td {
	padding: 15px 25px 10px;
}
.flex-elg-sect table thead th {
	background: #002d72;
	color: #fff;
	width: 50%;
  font-family: 'VolteB';
  font-size: 20px;
	line-height: 1.1;
}
.flex-elg-sect table td {
	border-bottom: 2px solid #d0cfcf;
	color: #002D72;
font-size: 20px;
line-height: 1.2;
}
.flex-elg-sect table td:nth-child(odd) {
	background: #e3eef9;
}
.notes-lbl {
	margin: 100px 0 20px;
}
.return-elg-sect .notes-txt {
	margin-bottom: 40px;
}
.not-on-desktop { display: none; }
.not-on-mobile { display: block; }

@media(max-width: 768px) {
	.not-on-desktop { display: block; }
	.not-on-mobile { display: none; }

	.returns-grid-3 {
		margin: 50px 0 60px !important;
	}
.returns-grid-3 h2 {
	font-size: 24px;
	line-height: 1.2;
}
.refunds-services-wrapper p {
	font-size: 18px;
	line-height: 1.2;
}
.init-returns h2 {
	font-size: 30px;
	line-height: 1.2;
}
.init-returns h3 {
	font-size: 24px;
	line-height: 1.2;
}
.init-returns h4 {
	font-size: 20px;
	line-height: 1.2;
}
.init-returns li {
	font-size: 19px;
}
.flex-elg-sect table td {
	font-size: 18px;
}
  .returns-grid-3,
	.init-returns .flex-ways,
	.flex-elg-sect {
      flex-direction: column
  } 
	.returns-grid-3 > div,
	.init-returns .flex-ways > div,
	.flex-elg-sect > div {
		width: 100%;
	}
	.flex-elg-sect > div:last-child .not-on-desktop {
		margin-bottom: 25px;
	}
	.init-returns .flex-ways > div:nth-child(2) {
		margin-top: 20px;
	}
}
@media (min-width: 768px) and (max-width: 1520px) {
	.flex-elg-sect > div:first-child {
		padding-right: 20px;
	}

}
